{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run test suite",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run test file",
      "type": "shell",
      "command": "npm test ./src/${fileBasename}",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run test case",
      "type": "shell",
      "command": "npm test ${relativeFile}:${lineNumber}",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}